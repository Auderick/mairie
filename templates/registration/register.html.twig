{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="module bg-dark-30" data-background="assets/images/section-4.jpg">
          <div class="container">
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <h1 class="module-title font-alt mb-0">Inscription</h1>
              </div>
            </div>
        </div>
    </section>
    {{ form_start(registrationForm) }}
    <div class="col-sm-6 col-sm-offset-3 align-center" id="bloc-registration">
        <h4 class="font-alt">Pour s'inscrire</h4>
        <hr class="divider-w mb-10">
        <form class="form">
            <div class="form-group" id="registration">
                    
                {{ form_row(registrationForm.username, {
                    label: 'Votre Nom'
                }) }}
            </div>
            <div class="form-group" id="registration">
                    
                {{ form_row(registrationForm.email, {
                    label: 'Votre email'
                }) }}
            </div>  
            <div class="form-group" id="registration">
                    
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
            </div>
    <div>
        {{ form_row(registrationForm.agreeTerms) }}
    
    
        <button type="submit" class="btn">S'inscrire</button>
    
        </form>
    </div>
        {{ form_end(registrationForm) }}
{% endblock %}
