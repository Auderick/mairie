{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="module bg-dark-30 col-sm-12" data-background="{{ asset('images/section-4.jpg')}}">
        <div class="container">
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <h1 class="module-title font-alt mb-0">Inscription</h1>
              </div>
            </div>
        </div>
    </section>
    {{ form_start(registrationForm) }}
    <section class="module">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 text-center" id="bloc-registration">
                    <h4 class="font-alt">Pour s'inscrire</h4>
                    <hr class="divider-w mb-10">
                    <form class="form">
                        <div class="form-group" id="registration">
                                
                            {{ form_row(registrationForm.username, {
                                label: 'Votre Nom'
                            }) }}
                        </div>
                        <div class="form-group" id="registration">
                                
                            {{ form_row(registrationForm.email, {
                                label: 'Votre email'
                            }) }}
                        </div>  
                        <div class="form-group" id="registration">
                                
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                        </div>
                        
                            {{ form_row(registrationForm.agreeTerms) }}
            
            
                            <button class="btn btn-block btn-round btn-b" type="submit" class="btn">S'inscrire</button>
            
                    </form>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
